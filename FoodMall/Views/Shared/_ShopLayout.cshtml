<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]--MyShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodMall.styles.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-warning ">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Shop" asp-action="Index">首页</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-dark" asp-area="" asp-controller="Shop" asp-action="ShopInfo">我的信息</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Add">添加菜品</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-black" asp-area="" asp-controller="Shop" asp-action="Orders" data-bs-toggle="orderinfo" aria-expanded="false">
                                订单信息
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @await Component.InvokeAsync("ShopInfo")
                    </div>
                    <form class="d-flex" role="search" asp-action="index" asp-controller="Shop" method="get">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keywords">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>  
    </header>
    <div class=" mt-xl-5" >
        @RenderBody()
    </div>
    @RenderSection("scripts",required:false)
</body>
</html>

