@model User


<div class="p-3 ">
    <form asp-action="Login" asp-controller="User" class="">
        <div class="input-group flex-nowrap" style="width:300px;">
            <span class="input-group-text" id="addon-wrapping">账号</span>
            <input type="text" class="form-control" asp-for=u_account placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping">
        </div>
        <div class="input-group flex-nowrap" style="width:300px;">
            <span class="input-group-text" id="addon-wrapping">密码</span>
            <input type="password" class="form-control" asp-for=u_password placeholder="password" aria-label="password" aria-describedby="addon-wrapping">
        </div>
        <div class="input-group flex-nowrap p-1">
            <button type="submit" class="btn btn-outline-success" onclick="alert">登录</button>
            <button type="button" class="btn btn-outline-primary">@Html.ActionLink("注册", "Register", "User")</button>
        </div>
    </form>
    @if (true)
    {
        <label class="text-danger">@ViewBag.Message</label>
    }
    
</div>